<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/fragment1"
    android:orientation="vertical"
    android:background="@color/student">

    <Button
        android:background="@color/student"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:id="@+id/Intermidiate"
        android:drawableTop="@drawable/intermidiate"
        android:text="Intermediate Programs"
        android:textSize="25sp"
        android:drawableTint="@color/primary"
        android:textColor="@color/primary"
        android:textStyle="italic"
        android:textAlignment="center"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        />
    <Button
        android:background="@color/student"
        android:id="@+id/Graduate"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        android:layout_gravity="center"
        android:drawableTint="@color/primary"
        android:drawableTop="@drawable/graduate"
        android:text="Graduate Programs"

        android:textColor="@color/primary"
        android:textAlignment="center"
        android:textSize="25sp"
        android:textStyle="italic" />


</LinearLayout>